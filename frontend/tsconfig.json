{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Node10",
    "strict": false,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "noImplicitReturns": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["vite/client", "@intlify/unplugin-vue-i18n/messages"],
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "tests-playwright/**/*.ts"],
  "exclude": ["node_modules", "dist", "../_docker/src/proxy/frontend/playwright.config.ts"]
}