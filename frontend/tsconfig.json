{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Node10",
    "strict": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["vite/client", "@intlify/unplugin-vue-i18n/messages"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "checkJs": true,
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "tests-playwright/**/*.ts", "../_docker/src/proxy/frontend/playwright.config.ts"],
  "exclude": ["node_modules", "dist"]
}